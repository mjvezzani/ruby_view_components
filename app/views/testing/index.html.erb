<% content_for :title, "Custom Branding Reports" %>

<% content_for :additional_javascript do %>
  <script>
    const handleScroll = () => {
      const scrollDiv = document.getElementById('scrollDiv');
      scrollDiv.scrollIntoView({ behavior: "smooth" });
    }
  </script>
<% end %>

<div class="custom-branding-wrapper">
  <%= render HeroSectionComponent.new(image_side: "right_side", bg_color: "white") do |c| %>
    <% c.with_subtitle do %>
      Custom Brand Your PRO Reports
    <% end %>
    <% c.with_title do %>
      Build your brand, grow your business, and stay ahead of the competition
    <% end %>
    <% c.with_description do %>
      Combine your market expertise with our Rental Property Analysis Reports to take your rental
      housing business to the next level.
    <% end %>
    <% c.with_button do %>
      <%= link_to "Get Started", "/pricing", class: "button" %>
    <% end %>
    <% c.with_image do %>
      <%= image_tag "custom_branding/customLogo", class: "content" %>
    <% end %>
  <% end %>

  <%= render IconCardShelfComponent.new do |shelf| %>
    <% shelf.with_title do %>
      Leverage Custom Branding as a Marketing Tool
    <% end %>

    <% shelf.with_icon_card do |card| %>
      <% card.with_image do %>
        <%= image_tag "custom_branding/customBoostBrand.svg" %>
      <% end %>
      <% card.with_title do %>
        Boost Brand Visibility
      <% end %>
      <% card.with_description do %>
        Increase brand awareness by adding your logo to our reports
      <% end %>
    <% end %>

    <% shelf.with_icon_card do |card| %>
      <% card.with_image do %>
        <%= image_tag "custom_branding/customBuildBrand.svg" %>
      <% end %>
      <% card.with_title do %>
        Awesome Components
      <% end %>
      <% card.with_description do %>
        This component stuff is working out nicely
      <% end %>
    <% end %>

    <% shelf.with_icon_card do |card| %>
      <% card.with_image do %>
        <%= image_tag "custom_branding/customStep1.svg" %>
      <% end %>
      <% card.with_title do %>
        Still Working
      <% end %>
      <% card.with_description do %>
        Super cool stuff!
      <% end %>
    <% end %>
  <% end %>

  <!-- Used to be old "competitionSection -->
  <%= render HeroSectionComponent.new(image_side: "right_side", bg_color: "blue") do |c| %>
    <% c.with_title do %>
      Make our data your own
    <% end %>
    <% c.with_description do %>
      With <strong>Custom Branding</strong>, you can add your logo and contact information
      to the top of your PRO Reports. Easily share them with your network to bolster your
      reputation and increase brand visibility.
    <% end %>
    <% c.with_button do %>
      <%= link_to "View Sample Report", "/pricing", class: "btn btn-primary btn-block" %>
    <% end %>
    <% c.with_image do %>
      <%= image_tag "custom_branding/customSampleReport", class: "content" %>
    <% end %>
  <% end %>

  <%= render CarouselComponent.new do |c| %>
    <% c.with_title do %>
      What our customers are saying
    <% end %>
    <% c.with_title_image do %>
      <%= image_tag "leadgen/carousel.svg", class: "carouselSection__staticBlock__image" %>
    <% end %>
    <% c.with_slide do |s| %>
      <% s.with_text do %>
        “The quality, depth, and breadth of information Rentometer gives you
        when researching cost comparables is far superior to all other rental
        listing sites.”
      <% end %>
      <% s.with_source do %>
        Investopedia, Best Rental Listing Sites
      <% end %>
    <% end %>
    <% c.with_slide do |s| %>
      <% s.with_text do %>
        "I have found Rentometer to be a very
        valuable tool when assessing market rent. The reports produced by simply entering an address, number of
        bedrooms and type of property results in a very user-friendly comparative market analysis presentation
        that makes conversations with owners about their rental property values much easier."
      <% end %>
      <% s.with_source do %>
        Alex C., Broker / CPM
      <% end %>
    <% end %>
    <% c.with_slide do |s| %>
      <% s.with_text do %>
        “[Rentometer] helps me keep things fair and
        reasonable with my rental that is over 3000 miles from where I live! I had a good landlord back when I
        was renting and I try to be one too. You help me do that!"
      <% end %>
      <% s.with_source do %>
        Laura H., Landlord
      <% end %>
    <% end %>
  <% end %>

  <%= render IconCardShelfComponent.new do |shelf| %>
    <% shelf.with_title do %>
      Why Choose Custom Branding
    <% end %>

    <% shelf.with_icon_card do |card| %>
      <% card.with_image do %>
        <%= image_tag "custom_branding/customStep1", class: "optionsSection__options__option__stepImage__first" %>
      <% end %>
      <% card.with_title do %>
        Step 1
      <% end %>
      <% card.with_description do %>
        Add your logo and contact information to our database
      <% end %>
    <% end %>

    <% shelf.with_icon_card do |card| %>
      <% card.with_image do %>
        <%= image_tag "custom_branding/customStep2", class: "optionsSection__options__option__stepImage__second" %>
      <% end %>
      <% card.with_title do %>
        Step 2
      <% end %>
      <% card.with_description do %>
        Select your branding in the Report Branding dropdown when running a PRO Report
      <% end %>
    <% end %>

    <% shelf.with_icon_card do |card| %>
      <% card.with_image do %>
        <%= image_tag "custom_branding/customStep3", class: "optionsSection__options__option__stepImage__third" %>
      <% end %>
      <% card.with_title do %>
        Step 3
      <% end %>
      <% card.with_description do %>
        Share your custom branded report with your network
      <% end %>
    <% end %>
  <% end %>
